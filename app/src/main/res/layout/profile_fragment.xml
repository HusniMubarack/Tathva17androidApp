<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/profileContainer"
        android:background="#60000000"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/tathva_man_green" />
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            tools:text="Username"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/box_border_white"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            tools:text="Email"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_border_white"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/collegename"
            android:layout_width="match_parent"
            tools:text="College"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_border_white"
            android:textColor="#fff"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventsContainer"
        android:layout_below="@id/profileContainer"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:background="#60000000"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/title"
                android:background="#00c862"
                android:text="Events Registered"
                android:gravity="center"
                android:typeface="sans"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/registeredList"
                android:background="#60000000"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Logout"
        android:background="#00000000"
        android:text="Logout"
        android:layout_alignParentRight="true"

        />


</RelativeLayout>
